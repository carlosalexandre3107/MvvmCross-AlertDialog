<resources>

    <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/primary</item>
      <item name="colorPrimaryDark">@color/primaryDark</item>
      <item name="colorAccent">@color/secondary</item>
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
      <item name="alertDialogTheme">@style/AlertDialogThemeBlue</item>
  </style>

  <style name="AlertDialogBlueTitleTextStyle">
    <item name="android:textColor">@color/secondary</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
  </style>

  <style name="AlertDialogThemeBlue" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/secondary</item>
    <item name="android:textColorPrimary">@color/grey600</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/secondary</item>
    <item name="android:windowTitleStyle">@style/AlertDialogBlueTitleTextStyle</item>
  </style>

  <style name="AlertDialogAmberTitleTextStyle">
    <item name="android:textColor">@color/amber500</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
  </style>

  <style name="AlertDialogThemeAmber" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/amber500</item>
    <item name="android:textColorPrimary">@color/grey600</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/amber500</item>
    <item name="android:windowTitleStyle">@style/AlertDialogAmberTitleTextStyle</item>
  </style>

  <style name="AlertDialogRedTitleTextStyle">
    <item name="android:textColor">@color/red500</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
  </style>

  <style name="AlertDialogThemeRed" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/red500</item>
    <item name="android:textColorPrimary">@color/grey600</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/red500</item>
    <item name="android:windowTitleStyle">@style/AlertDialogRedTitleTextStyle</item>
  </style>

  <style name="AlertDialogGreenTitleTextStyle">
    <item name="android:textColor">@color/green500</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
  </style>

  <style name="AlertDialogThemeGreen" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/green500</item>
    <item name="android:textColorPrimary">@color/grey600</item>
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/green500</item>
    <item name="android:windowTitleStyle">@style/AlertDialogGreenTitleTextStyle</item>
  </style>

  <style name="ButtonGreen" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@color/white</item>
    <item name="colorButtonNormal">@color/green500</item>
  </style>

  <style name="ButtonRed" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@color/white</item>
    <item name="colorButtonNormal">@color/red400</item>
  </style>

  <style name="ButtonBlue" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@color/white</item>
    <item name="colorButtonNormal">@color/secondary</item>
  </style>

  <style name="ButtonAmber" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@color/white</item>
    <item name="colorButtonNormal">@color/amber500</item>
  </style>

</resources>
